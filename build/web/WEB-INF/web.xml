<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Principal</filter-name>
        <filter-class>br.com.filtro.MeuFiltro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Principal</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletExcluir</servlet-name>
        <servlet-class>br.com.servlets.ServletExcluir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterar</servlet-name>
        <servlet-class>br.com.servlets.ServletAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCadastrar</servlet-name>
        <servlet-class>br.com.servlets.ServletCadastrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListar</servlet-name>
        <servlet-class>br.com.servlets.ServletListar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterarNotas</servlet-name>
        <servlet-class>br.com.servlets.ServletAlterarNotas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletExcluirNotas</servlet-name>
        <servlet-class>br.com.servlets.ServletExcluirNotas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletErro</servlet-name>
        <jsp-file>/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>br.com.servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletExcluir</servlet-name>
        <url-pattern>/Excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterar</servlet-name>
        <url-pattern>/Alterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCadastrar</servlet-name>
        <url-pattern>/Cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListar</servlet-name>
        <url-pattern>/Listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterarNotas</servlet-name>
        <url-pattern>/AlterarNotas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletExcluirNotas</servlet-name>
        <url-pattern>/ExcluirNotas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletErro</servlet-name>
        <url-pattern>/Erro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Restrição1</display-name>
        <web-resource-collection>
            <web-resource-name>secured page</web-resource-name>
            <description/>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
